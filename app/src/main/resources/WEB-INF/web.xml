<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
    version="2.4">



    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>servlet.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>LoginServ</servlet-name>
        <servlet-class>servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServ</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>EventServ</servlet-name>
        <servlet-class>servlet.EventServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EventServ</servlet-name>
        <url-pattern>/event</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>InviteServlet</servlet-name>
        <servlet-class>servlet.InviteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InviteServlet</servlet-name>
        <url-pattern>/invite</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ExceptionServlet</servlet-name>
        <servlet-class>servlet.ExceptionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ExceptionServlet</servlet-name>
        <url-pattern>/exception</url-pattern>
    </servlet-mapping>
    
    
    <filter>
        <filter-name>authentication filter</filter-name>
        <filter-class>filter.AuthenticateUserFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>authentication filter</filter-name>
        <url-pattern>/event</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>authentication admin filter</filter-name>
        <filter-class>filter.AuthenticateAdminFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>authentication admin filter</filter-name>
        <url-pattern>/admin</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>AdminServlet</servlet-name>
        <servlet-class>servlet.AdminServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminServlet</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>requestdumper</filter-name>
        <filter-class>
            org.apache.catalina.filters.RequestDumperFilter
        </filter-class>
    </filter>
    <filter-mapping>
        <filter-name>requestdumper</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>


  <error-page>
  	<error-code>404</error-code>
  	<location>/AppExceptionHandler</location>
  </error-page>
  
  <error-page>
  <exception-type>java.lang.Exception</exception-type>
  <location>/exception</location>
  </error-page>
</web-app>
