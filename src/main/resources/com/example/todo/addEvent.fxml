<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="rootAnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.todo.AddEventController">
   <children>
      <AnchorPane prefHeight="94.0" prefWidth="696.0" style="-fx-background-color: #00bf50;">
         <children>
            <DatePicker fx:id="datePicker" layoutX="375.0" layoutY="19.0" prefHeight="26.0" prefWidth="98.0" promptText="Date" />
            <TextField fx:id="timePicker" layoutX="502.0" layoutY="20.0" prefHeight="26.0" prefWidth="50.0" promptText="Time" />
            <TextField fx:id="eventName" layoutX="220.0" layoutY="19.0" prefHeight="26.0" prefWidth="127.0" promptText="Name of event" />
            <Button fx:id="btnDelete" layoutX="141.0" layoutY="61.0" mnemonicParsing="false" onAction="#removeEvent" prefHeight="16.0" prefWidth="50.0" style="-fx-background-color: white;" text="Delete" />
            <Button fx:id="btnAdd" layoutX="135.0" layoutY="16.0" mnemonicParsing="false" onAction="#addEvent" prefHeight="34.0" prefWidth="62.0" style="-fx-background-color: white;" text="Add" />
            <ChoiceBox fx:id="priorityPicker" layoutX="599.0" layoutY="53.0" prefHeight="26.0" prefWidth="82.0" />
            <TextField fx:id="participantsList" layoutX="220.0" layoutY="53.0" prefHeight="26.0" prefWidth="127.0" promptText="participants list" />
            <ChoiceBox fx:id="reminderPicker" layoutX="502.0" layoutY="53.0" prefHeight="26.0" prefWidth="82.0" />
            <TextField fx:id="endTimePicker" layoutX="574.0" layoutY="20.0" prefHeight="26.0" prefWidth="50.0" promptText="Time" />
            <TextField fx:id="locationField" layoutX="375.0" layoutY="53.0" prefHeight="26.0" prefWidth="98.0" promptText="location" />
            <Button fx:id="btnExport" layoutX="14.0" layoutY="40.0" mnemonicParsing="false" onAction="#exportEvent" prefHeight="0.0" prefWidth="50.0" style="-fx-background-color: white;" text="Export" />
         </children>
      </AnchorPane>
      <ListView fx:id="myListView" layoutY="94.0" prefHeight="438.0" prefWidth="696.0" />
   </children>
</AnchorPane>
